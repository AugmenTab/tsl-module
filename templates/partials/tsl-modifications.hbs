<table>
  <thead>
    <tr>
      <th>{{localize "tsl.modificationsPage.header"}}</th>
      <th style="width:30px">
        <a><i class="fas fa-plus mod-create"></i></a>
      </th>
    </tr>
  </thead>
</table>
<div class="tsl-mod-list">
  {{#each data.vehicle.modifications.list as |mod|}}
    <div class="tsl-mod">
      <input class="mod-update" style="width:370px" data-field="name" data-index={{mod.index}} type="text" value="{{mod.name}}" onfocus="this.select()"/>
      <select class="mod-update" data-field="mods" data-index={{mod.index}}>
        {{#select mod.mods}}
          <option value="none">
            {{localize "tsl.modificationsPage.none"}}
          </option>
          <option value="engineIR">
            {{localize "tsl.modificationsPage.engineIR"}}
          </option>
          <option value="transmissionIR">
            {{localize "tsl.modificationsPage.transmissionIR"}}
          </option>
          <option value="chassisIR">
            {{localize "tsl.modificationsPage.chassisIR"}}
          </option>
          <option value="suspensionIR">
            {{localize "tsl.modificationsPage.suspensionIR"}}
          </option>
          <option value="ho">
            {{localize "tsl.modificationsPage.ho"}}
          </option>
          <option value="re">
            {{localize "tsl.modificationsPage.re"}}
          </option>
          <option value="br">
            {{localize "tsl.modificationsPage.br"}}
          </option>
          <option value="topSpeed">
            {{localize "tsl.modificationsPage.topSpeed"}}
          </option>
          <option value="torque">
            {{localize "tsl.modificationsPage.torque"}}
          </option>
          <option value="xlr8">
            {{localize "tsl.modificationsPage.xlr8"}}
          </option>
          <option value="stopping">
            {{localize "tsl.modificationsPage.stopping"}}
          </option>
          <option value="turning">
            {{localize "tsl.modificationsPage.turning"}}
          </option>
          <option value="load">
            {{localize "tsl.modificationsPage.load"}}
          </option>
          <option value="hitPoints">
            {{localize "tsl.modificationsPage.hitPoints"}}
          </option>
          <option value="ac">
            {{localize "tsl.modificationsPage.ac"}}
          </option>
          <option value="armor">
            {{localize "tsl.modificationsPage.armor"}}
          </option>
          <option value="rammingDamage">
            {{localize "tsl.modificationsPage.rammingDamage"}}
          </option>
          <option value="hoursOfOperation">
            {{localize "tsl.modificationsPage.hoursOfOperation"}}
          </option>
          <option value="fuelCapacity">
            {{localize "tsl.modificationsPage.fuelCapacity"}}
          </option>
          <option value="weight">
            {{localize "tsl.modificationsPage.weight"}}
          </option>
        {{/select}}
      </select>
      <input class="mod-update" style="width:50px" data-field="val" data-index={{mod.index}} type="number" data-dtype="Number" placeholder="VAL" value="{{mod.val}}" onfocus="this.select()"/>
      <input class="mod-update" style="width:50px" data-field="weight" data-index={{mod.index}} type="number" data-dtype="Number" placeholder="WT" value="{{mod.weight}}" onfocus="this.select()"/>
      <a><i class="fas fa-trash mod-delete" data-index="{{mod.index}}"></i></a>
    </div>
  {{else}}
    <span>{{localize "tsl.modificationsPage.empty"}}</span>
  {{/each}}
</div>