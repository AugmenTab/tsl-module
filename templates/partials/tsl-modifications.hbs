            {{localize "tsl.modificationsPage.suspensionIR"}}
          </option>
          <option value="ho">
            {{localize "tsl.modificationsPage.ho"}}
          </option>
          <option value="re">
            {{localize "tsl.modificationsPage.re"}}
          </option>
          <option value="br">
            {{localize "tsl.modificationsPage.br"}}
          </option>
          <option value="topSpeed">
            {{localize "tsl.modificationsPage.topSpeed"}}
          </option>
          <option value="torque">
            {{localize "tsl.modificationsPage.torque"}}
          </option>
          <option value="xlr8">
            {{localize "tsl.modificationsPage.xlr8"}}
          </option>
          <option value="stopping">
            {{localize "tsl.modificationsPage.stopping"}}
          </option>
          <option value="turning">
            {{localize "tsl.modificationsPage.turning"}}
          </option>
          <option value="load">
            {{localize "tsl.modificationsPage.load"}}
          </option>
          <option value="hitPoints">
            {{localize "tsl.modificationsPage.hitPoints"}}
          </option>
          <option value="ac">
            {{localize "tsl.modificationsPage.ac"}}
          </option>
          <option value="armor">
            {{localize "tsl.modificationsPage.armor"}}
          </option>
          <option value="rammingDamage">
            {{localize "tsl.modificationsPage.rammingDamage"}}
          </option>
          <option value="hoursOfOperation">
            {{localize "tsl.modificationsPage.hoursOfOperation"}}
          </option>
          <option value="fuelCapacity">
            {{localize "tsl.modificationsPage.fuelCapacity"}}
          </option>
          <option value="weight">
            {{localize "tsl.modificationsPage.weight"}}
          </option>
        </select>
      {{/select}}
      <input style="width:50px" data-field="val" data-index={{mod.index}} type="number" data-dtype="Number" placeholder="VAL" value="{{mod.val}}"/>
      <input style="width:50px" data-field="weight" data-index={{mod.index}} type="number" data-dtype="Number" placeholder="WT" value="{{mod.weight}}"/>
      <a><i class="fas fa-trash"></i></a>
    </div>
  {{else}}
    <span>{{localize "tsl.modificationsPage.empty"}}</span>
  {{/each}}
</div>