<table>
  <thead>
    <tr>
      <th>{{localize "tsl.modificationsPage.header"}}</th>
      <th style="width:30px">
        <a><i class="fas fa-plus mod-create"></i></a>
      </th>
    </tr>
  </thead>
</table>
<div class="tsl-mod-list">
  {{#each data.vehicle.modifications.list as |mod|}}
    <div class="tsl-mod">
      <input style="width:370px" data-field="name" data-index={{mod.index}} type="text" value="{{mod.name}}" onfocus="this.select()"/>
      {{#select mod.mods}}
        <select data-field="mods" data-index={{mod.index}}>
          <option value="engineIR">
            {{localize "tsl.modificationsPage.engineIR"}}
          </option>
          <option value="transmissionIR">
            {{localize "tsl.modificationsPage.transmissionIR"}}
          </option>
          <option value="chassisIR">
            {{localize "tsl.modificationsPage.chassisIR"}}
          </option>
